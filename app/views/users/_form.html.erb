<div class="side-image">
  <div class="images-wrapper"></div>
  <div class="side-image-content">
    <h4>Stellar Federation Service</h4>
    <h1>Create a Stellar Address</h1>
    <div class="row">
      <div class="container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row collapse combo-input">
            <%= f.label :email, "Your email address for the Stellar Address" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "john@email.com" %>
            <span class="postfix">
              <span class="asterisk">*</span>
              <%= StellarFederation::Application::DOMAIN %>
            </span>
          </div>

          <div class="row collapse">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password to change or delete Stellar address" %>
          </div>

          <div class="row collapse">
            <%= f.label :account_id, "Stellar Public Key" %>
            <%= f.text_field :account_id, autocomplete: "off", placeholder: "GD6WU64OEP5C4LRBH6NK3MHYIA2ADN6K6II6EXPNVUR3ERBXT4AN4ACD" %>
          </div>

          <div class="row collapse email-notifications">
            <%= f.check_box :receive_email_notifications %> <%= f.label :receive_email_notifications, "Receive email notifications for incoming payments to this Stellar account" %>
          </div>

          <div class="row collapse">
            <%= f.submit "Create Stellar Address", class: "button round" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
